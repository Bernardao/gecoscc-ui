{% extends "base.jinja2" %}

{% block extraheader %}
<style>
    .alert{
        margin: 0 auto 20px;
    }
</style>
{% endblock %}

{% block htmlclass %}bootstrap-admin-vertical-centered{% endblock %}
{% block bodyclass %}bootstrap-admin-without-padding{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <form method="post" class="bootstrap-admin-login-form">
            <h1>GECOS CC Login</h1>
            <h4 class="bootstrap-admin-light-padding-bottom">Consejería de Hacienda</h4>
            <div class="form-group">
                <input class="form-control" type="text" name="email" placeholder="E-mail">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="Contraseña">
            </div>
            <div class="form-group">
                <label>
                    <input type="checkbox" name="remember_me">
                    Recuérdame
                </label>
            </div>
            <a class="btn btn-lg btn-primary" href="/">Enviar</a>
        </form>
    </div>
</div>
{% endblock %}

{% block extrajs %}
<script>
    $(document).ready(function () {
        $('input[name="email"]').focus();
    });
</script>
{% endblock %}
